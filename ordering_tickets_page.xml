<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!--No functionality here as there isn't much working in the java file.-->
    <!--Plan was to click a button and it would add a ticket to the 'basket'. Only allows one of each ticket-->

    <!--Short sentence stating what to do-->
    <TextView
        android:id="@+id/textforordering"
        android:layout_width="257dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginBottom="50px"
        android:layout_marginTop="50px"
        android:gravity="center"
        android:text="Choose one of these options to add onto your ticket:"
        android:textSize="20dp" />

    <!--Button for ordering a CPU for the PC-->
    <Button
        android:id="@+id/cpu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="CPU"
        android:layout_below="@+id/textforordering"
        />

    <!--Button for ordering a graphics card-->
    <Button
        android:id="@+id/GC"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/cpu"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="323dp"
        android:text="Graphics Card" />

    <!--Button for ordering a cooling system-->
    <Button
        android:id="@+id/Cooling"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Cooling"
        android:layout_below="@id/GC"
        />

    <!--Button for ordering other extra addons, such as speakers or keyboard.-->
    <Button
        android:id="@+id/Peripherals"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Peripherals"
        android:layout_below="@id/Cooling"
        />

    <!--Shows all currently owned tickets here.-->
    <Button
        android:id="@+id/ticket"
        android:layout_width="500dp"
        android:layout_height="50dp"
        android:layout_below="@id/Peripherals"
        android:text="Show ordered PC"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="45dp"
        android:layout_marginEnd="90dp"
        android:layout_marginBottom="45dp"
        />

    <Button
        android:id="@+id/test2"
        android:layout_width="500dp"
        android:layout_height="50dp"
        android:layout_below="@id/Peripherals"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="129dp"
        android:layout_marginEnd="89dp"
        android:layout_marginBottom="45dp"
        android:text="Test" />

    <!--Button below here for clearing 'basket', but no time so doesn't exist.
    android:layout_width="wrap_content"

        android:layout_marginBottom="393dp"


    -->

</RelativeLayout>